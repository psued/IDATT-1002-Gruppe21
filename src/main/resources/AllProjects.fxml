<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="no.ntnu.idatt1002.app.gui.AllProjectsController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="550.0">
               <children>
                  <Label text="All Projects">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <ToggleButton mnemonicParsing="false" onMouseClicked="#switchTheme" text="Light / Dark">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font></ToggleButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="700.0" prefWidth="800.0">
               <children>
                  <TableView fx:id="table" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="800.0" prefWidth="700.0">
                    <columns>
                      <TableColumn fx:id="name" prefWidth="93.33331298828125" text="Name" />
                      <TableColumn fx:id="dueDate" prefWidth="115.33334350585938" text="Due date" />
                        <TableColumn fx:id="category" prefWidth="86.00006103515625" text="Category" />
                        <TableColumn fx:id="totalAccounting" prefWidth="144.800048828125" text="Accounting total" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TableView>
                  <VBox alignment="CENTER" prefHeight="643.0" prefWidth="160.0" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onMouseClicked="#newProject" prefWidth="155.0" text="New Project">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font></Button>
                        <Button mnemonicParsing="false" onMouseClicked="#viewProject" prefWidth="155.0" text="View Project">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font></Button>
                        <Button mnemonicParsing="false" onMouseClicked="#editProject" prefWidth="155.0" text="Edit Project">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font></Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Not started - " />
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="RED" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="    Doing - " />
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="ORANGE" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Finished - " />
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="GREEN" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <Label fx:id="errorMessage" />
         </children>
      </VBox>
   </children>
</AnchorPane>
